{
    "extends": ["eslint:recommended"],
    "env": {
        "browser": true,
        "node": true,
        "es6":true,
        "mocha":true,
        "qunit":true,
        "jquery":true,
        "mongo":true
    },
    "globals": {
        "vue": true,
        "angular": true
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"]
    },
    "parser": "babel-eslint",
    "parserOptions": {
       "ecmaVersion": 6,
       "sourceType": "module",
       "ecmaFeatures": {
           "jsx": true
       }
    }
}
